<?xml version="1.0"?>
<Devices>
    <Device type="custom" id="udpListener">
        <Name>UDP Listener</Name>
        <ConfigUI>
            <Field id="udpPort" type="textfield" defaultValue="">
                <Label>UDP Port:</Label>
            </Field>
            <Field id="udpPortNote" type="label" fontSize="small" fontColor="darkgray">
                <Label>Required.</Label>
            </Field>
            <Field id="multiGroup" type="textfield" defaultValue="">
                <Label>Multicast Group:</Label>
            </Field>
            <Field id="multiGroupNote" type="label" fontSize="small" fontColor="darkgray">
                <Label>Optional.  Leave blank for non-multicast devices.</Label>
            </Field>
        </ConfigUI>
        <States>
            <State id="lastIP">
                <ValueType>String</ValueType>
                <TriggerLabel>Last IP</TriggerLabel>
                <ControlPageLabel>Last IP</ControlPageLabel>
            </State>
            <State id="lastPort">
                <ValueType>String</ValueType>
                <TriggerLabel>Last Port</TriggerLabel>
                <ControlPageLabel>Last Port</ControlPageLabel>
            </State>
            <State id="lastMessage">
                <ValueType>String</ValueType>
                <TriggerLabel>Last Message</TriggerLabel>
                <ControlPageLabel>Last Message</ControlPageLabel>
            </State>
        </States>
    </Device>
</Devices>
